<% layout('layouts/boilerplate'); %>
<div class="row">
  <div class="col-6 offset-3">
    <h2 class="text-center">Add a Campground</h2>
    <form class="validated-form mb-2" action="/campgrounds" method="POST" enctype="multipart/form-data" novalidate>
      <div class="mb-2">
        <label class="form-label" for="title">Campground Name:</label>
        <input class="form-control" id="title" name="campground[title]" type="text" placeholder="Campground name" required>
      </div>
      <div class="mb-2">
        <label class="form-label" for="location">Location:</label>
        <input class="form-control" id="location" name="campground[location]" type="text" placeholder="City, State" required>
      </div>
      <div class="mb-2">
        <label for="price" class="form-label">Campground Price:</label>
        <div class="input-group mb-2">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" name="campground[price]" class="form-control" placeholder="99.99" aria-label="price" aria-describedby="price-label" required>
        </div>
      </div>
      <div class="mb-2">
        <label class="form-label" for="description">Description:</label>
        <textarea class="form-control" id="description" name="campground[description]" required></textarea>
      </div>
      <label class="form-label" for="image">Add Images:</label>
      <input class="form-control mb-3" type="file" name="image" id="image" multiple>
      <input class="btn btn-primary" type="submit" value="Add Campground">
      <a href="/campgrounds" class="btn btn-warning">Cancel</a>
    </form>
  </div>
</div>

